        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {
	// This method is used to send a heartbeat message
	var grAgent = new GlideRecord('x_108443_sndml_database_agent');
	if (grAgent.get('name', request.pathParams.agent)) {
		var body = {
			'instance': gs.getProperty('instance_name'),
			'agent': grAgent.getUniqueValue(),
			'agent_name': grAgent.getValue('name'),
		};
		gs.info('GetAgent response: ' + JSON.stringify(body));		
		response.setBody(body);	
		// Update Last Checkin
		grAgent.last_checkin = new GlideDateTime();
		grAgent.update();		
	}
	else {
		gs.error('GetAgent: Agent Not Found: ' + request.pathParams.agent);
		response.setStatus(404);		
	}

})(request, response);]]></operation_script>
